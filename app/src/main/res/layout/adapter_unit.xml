<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="24sp"
                tools:text="Nama Kandang" />

            <TextView
                android:id="@+id/txt_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_nama"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Keterangan" />

            <Button
                android:id="@+id/cv_unit_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_keterangan"
                android:layout_marginTop="19dp"
                android:text="SENSOR" />

            <Button
                android:id="@+id/cv_unit_aktuator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cv_unit_sensor"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/cv_unit_sensor"
                android:text="AKTUATOR" />

            <ImageView
                android:id="@+id/cv_unit_hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cv_unit_edit"
                android:layout_alignTop="@+id/cv_unit_sensor"
                android:paddingBottom="8dp"
                app:srcCompat="@android:drawable/ic_delete" />

            <ImageView
                android:id="@+id/cv_unit_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txt_nama"
                android:paddingBottom="8dp"
                android:paddingRight="10dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>