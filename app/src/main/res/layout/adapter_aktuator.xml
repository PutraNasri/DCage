<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cv_aktuator_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cv_aktuator_off"
                android:layout_marginStart="120dp"
                android:text="ON" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="24sp"
                tools:text="Nama Aktuator" />

            <TextView
                android:id="@+id/txt_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_nama"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Keterangan" />

            <Button
                android:id="@+id/cv_aktuator_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_keterangan"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:text="OFF" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>